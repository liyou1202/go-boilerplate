# Environment Configuration for Docker Compose
# Copy this file to .env and update with your actual values
# .env is ignored by git for security

# Application Environment (loc|dev|prod)
ENV=loc
GIN_MODE=debug

# MySQL Configuration
MYSQL_ROOT_PASSWORD=root_password
MYSQL_DATABASE=syncdrive
MYSQL_USER=syncdrive_user
MYSQL_PASSWORD=syncdrive_password
MYSQL_PORT=3306

# MongoDB Configuration
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=admin_password
MONGO_DATABASE=syncdrive
MONGO_PORT=27017

# Redis Configuration
REDIS_PASSWORD=redis_password
REDIS_PORT=6379

# MQTT Configuration
MQTT_PORT=1883

# API Server
API_PORT=8080
